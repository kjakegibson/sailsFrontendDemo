<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Delete a Band</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<h2>Delete a Band</h2>
<form action="/delete" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="bandID" class="col-sm-2 control-label">Band ID #</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="bandid" name="id" placeholder="Band ID #">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Delete a Band</button>
    </div>
  </div>
</form>

<h2>Bands</h2>
<table class="table table-striped table-bordered">
  <tr>
    <th>ID</th>
    <th>Band Name</th>
    <th>Genre</th>
    <th>Sub Genre</th>
    <th>Country of Origin</th>
    <th>Year Formed</th>
    <th>Lyrical Themes</th>
    <th>Active</th>
  </tr>
  <% if(typeof bands != "undefined" && bands.length > 0){ %>
    <% bands.forEach(function(band){ %>
      <tr>
        <td><%= band.id %></td>
        <td><%= band.bandName %></td>
        <td><%= band.genre %></td>
        <td><%= band.subGenre %></td>
        <td><%= band.countryOfOrigin %></td>
        <td><%= band.yearFormed %></td>
        <td><%= band.lyricalThemes %></td>
        <td><%= band.active %></td>
      </tr>
    <% }) %>
  <% }else{ %>
      <tr>
        <td colspan="8">0 records found</td>
      </tr>
  <% } %>
  
</table>